<%= form_for(@post, :html => { :class => 'form-horizontal'}) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :titke, 'Titulo', :class => 'col-lg-2 control-label', :for => 'inputEmail' %>
  <div class="col-lg-10">
    <div class="form-control-wrapper">
    <%= f.text_field :titke, :class => 'form-control empty', :type => 'text', :placeholder => 'Titulo', :id => "inputEmail" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :body, :class => 'col-lg-2 control-label', :for => 'textArea' %>
  <div class="col-lg-10">
    <div class="form-control-wrapper">
      <%= f.text_area :body, :class => 'form-control', :type => 'text', :placeholder => 'Texto', :rows => '3', :id => 'textArea' %>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
    <%= f.submit 'Save', :class => 'btn btn-primary withripple' %>
  </div>
</div>
<% end %>
